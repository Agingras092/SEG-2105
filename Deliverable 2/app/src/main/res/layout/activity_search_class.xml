<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchClass">

    <EditText
        android:id="@+id/editTextClassName"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Class name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextInstName"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Instructor name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextClassName" />

    <Button
        android:id="@+id/button8"
        android:layout_width="138dp"
        android:layout_height="49dp"
        android:layout_marginTop="108dp"
        android:onClick="searchClass"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInstName" />
</androidx.constraintlayout.widget.ConstraintLayout>